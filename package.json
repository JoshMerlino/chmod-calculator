{
    "name": "vite-project",
    "version": "1.0.0",
    "description": "Create fast single-page progressive-web-apps using PhotonCSS 12, React and TypeScript.",
    "main": "lib/src",
    "types": "lib/src",
    "author": "Josh Merlino",
    "license": "ISC",
    "private": true,
    "webserver": {
        "http": {
            "port": 80,
            "timeout": 10
        },
        "https": {
            "enabled": true,
            "port": 443,
            "certs": "./ssl"
        }
    },
    "scripts": {
        "watch-ts": "tsc -w -p tsconfig.node.json",
        "watch-js": "nodemon .",
        "preview": "vite preview",
        "dev": "concurrently \"npm:watch-*\" \"vite\"",
        "start": "node .",
        "build": "tsc -p tsconfig.node.json && tsc && vite build && cp public_html/index.html public_html/404.html"
    },
    "dependencies": {
        "async-require-context": "^1.8.15",
        "chalk": "5.x.x",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "extract-zip": "^2.0.1",
        "node-fetch": "3.x.x"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^18.14.6",
        "@types/node-fetch": "^2.6.2",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "@vitejs/plugin-react": "^3.1.0",
        "autoprefixer": "^10.4.13",
        "chokidar": "^3.5.3",
        "concurrently": "^7.6.0",
        "eslint": "^8.35.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "lessc": "^1.0.2",
        "nodemon": "^2.0.21",
        "react": "^18.1.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.8.0",
        "react-query": "^3.39.3",
        "react-router-dom": "^6.8.2",
        "tailwindcss": "^3.2.7",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vite-plugin-html-config": "^1.0.11",
        "vite-plugin-pwa": "^0.14.4",
        "web-manifest-reader": "^1.2.3"
    }
}
